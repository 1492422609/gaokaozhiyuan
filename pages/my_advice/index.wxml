<view class="opinion_wrap">
  <form bindsubmit="formSubmit">
      <view class="content_wrap">
          <view class="content">
            <textarea name="opinion"   auto-height placeholder-class="placeholder" placeholder="期待您的反馈，我们将会不断改进(ง •̀_•́)ง" />
            <!-- value="{{content}}" -->
          </view>
      </view>  
      <view class="phone">
          <input name="contact" placeholder-class="placeholder" placeholder="请留下您的手机号或邮箱，方便我们及时回复" />
          <!-- value="{{contact}}"  -->
      </view>
      <button formType="submit" hover-class="none" loading="{{loading}}">提交</button>
  </form>
</view>
